<!DOCTYPE html>
<html>
<head>
  <title>Whatsinyourfood</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '260554340991212',
        xfbml      : true,
        version    : 'v2.7'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>
  <%= csrf_meta_tags %>

  <!-- Facebook Open Graph tags !-->
  <meta property="fb:app_id"      content="260554340991212" />
  <meta property="og:url"         content="<%= root_url %>" />
  <meta property="og:type"        content="article" />
  <meta property="og:title"       content="Whats in your Food?" />
  <meta property="og:description" content="A quiz based on nutrition information." />
  <meta property="og:image"       content="<%= root_url + 'assets/logo.jpg' %>" />

</head>
<body>
  <!--Div and Script for Facebook Share !-->
  <div id="fb-root"></div>
  <!--end Div and Script for Facebook Share !-->

<div id="mobile-header">
  <h1>What is in Your Food?</h1>
  <h2>Test your knowledge of nutrition requirements</h2>
</div>

<div id="mobile-content">
 <%= yield %>
</div>

<div id="mobile-footer">
  <ul>
    <li><%= link_to "About", root_path %></li>
    <li> - </li>
    <li><%= link_to "Stats for nerds", 'stats' %></li>
  </ul>
</div>

<% if Rails.env.development? then %>
  <%= debug(params) %>
  <br>Current User ID -> <%= $userid %>
<% end %>

</body>
</html>
